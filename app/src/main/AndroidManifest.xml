<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WoofJooy"
        tools:targetApi="31">
        <activity
            android:name=".screen.Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.WoofJooy" />
        <activity
            android:name=".screen.PerfilParceiro"
            android:exported="false"
            android:label="@string/title_activity_perfil_parceiro"
            android:theme="@style/Theme.WoofJooy" />
        <activity
            android:name=".screen.Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.WoofJooy" />
        <activity
            android:name=".screen.Start"
            android:exported="false"
            android:label="@string/title_activity_start"
            android:theme="@style/Theme.WoofJooy" />
        <activity
            android:name=".screen.SelectTypePerfil"
            android:exported="false"
            android:label="@string/title_activity_select_type_perfil"
            android:theme="@style/Theme.WoofJooy" />
        <activity
            android:name=".screen.Feed"
            android:exported="false"
            android:label="@string/title_activity_feed"
            android:theme="@style/Theme.WoofJooy" />
        <activity
            android:name=".screen.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WoofJooy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>